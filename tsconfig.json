{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./client/*"],
			"@shared/*": ["./shared/*"]
		},
		"strictNullChecks": true
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.js"],
	"exclude": [
		"node_modules",
		"express-client/node_modules/@solana/spl-token-group"
	]
}
